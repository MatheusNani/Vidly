@model Vidly.ViewModels.MoviesFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>New Movie</h2>
@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Name)
        @Html.TextBoxFor(m => m.Movies.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleasedDate)
        @Html.TextBoxFor(m => m.Movies.ReleasedDate, "{0:d MMM yyyy }", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.ReleasedDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.GenreTypesId)
        @Html.DropDownListFor(m => m.Movies.GenreTypesId, new SelectList(Model.GenreTypes, "Id", "Name"), "Select a Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.GenreTypesId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.NumberInStock)
        @Html.TextBoxFor(m => m.Movies.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Movies.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
