@model IEnumerable<Vidly.Models.Movies>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
<!--
    Guest user are not able to Add a New Movie, Edit or Delete it.
    Here we are creating a new View for guest Users, it's easier to create a brand new View than handle it
    access using JavaScript.
-->
<br />
<br />
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#movies").DataTable({
                ajax: {
                    url: "api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genreTypes.name"
                    }
                ]

            });
        });
    </script>
}
