@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
@Html.ActionLink("NEW MOVIE", "New", "Movies", new { @class = "btn btn-primary" })
<br />
<br />
@if (!@Model.Any())
{
    <p>We don't have any movies to rent.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movies.Name, "Edit", "Movies", new { id = movies.Id }, null)</td>
                    <td>@movies.GenreTypes.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
